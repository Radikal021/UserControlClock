                <TextBlock TextWrapping="Wrap" Text="11"/>
                <TextBlock TextWrapping="Wrap" Text="12" FontWeight="Bold" FontSize="15"/>
            </ec:PathListBox>
            <TextBlock FontWeight="Bold" HorizontalAlignment="Left" TextWrapping="Wrap" Text="NASRA" VerticalAlignment="Top" Margin="104,48,0,0" FontFamily="Javanese Text">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFFFFF17" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <ed:BlockArrow x:Name="ArrowHour" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="Black"  Height="57" Margin="120.5,68,120.5,125" Orientation="Up" Stroke="#FE6B6868"  Width="9" ArrowheadAngle="0" ArrowBodySize="0.89" RenderTransformOrigin="0.5,1">
                <ed:BlockArrow.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="6E-06" Y="-1E-06"/>
                    </TransformGroup>
                </ed:BlockArrow.RenderTransform>
            </ed:BlockArrow>
            <ed:BlockArrow  x:Name="ArrowSecond" VerticalAlignment="Center" HorizontalAlignment="Center" Height="90" Margin="0,0,0,90" Orientation="Up"  Width="5" Fill="Red" RenderTransformOrigin="0.5,1" ArrowheadAngle="0" Stroke="#FE6B6868">
                <ed:BlockArrow.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-121.759"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ed:BlockArrow.RenderTransform>
            </ed:BlockArrow>
            <ed:BlockArrow x:Name="ArrowMinute" Fill="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Height="80" Margin="0,0,0,80" Orientation="Up" Stroke="#FE6B6868"  Width="9" ArrowheadAngle="0" RenderTransformOrigin="0.5,1">
                <ed:BlockArrow.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="110.556"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </ed:BlockArrow.RenderTransform>
            </ed:BlockArrow>
            <Ellipse x:Name="Circle" Fill="Black"  HorizontalAlignment="Center" Height="15" Margin="0" Stroke="#FE6B6868" VerticalAlignment="Center" Width="15"/>
        </Grid>
    </Viewbox>
</UserControl>
