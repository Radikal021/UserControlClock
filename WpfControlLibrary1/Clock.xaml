                <TextBlock TextWrapping="Wrap" Text="|" Foreground="Red"/>
            </ec:PathListBox>
            <ed:Arc x:Name="arc" ArcThickness="0" ArcThicknessUnit="Pixel" HorizontalAlignment="Center" Height="185" Margin="0" Stretch="None" VerticalAlignment="Center" Width="185" StartAngle="30" EndAngle="360"/>
            <ec:PathListBox Margin="30">
                <ec:PathListBox.LayoutPaths>
                    <ec:LayoutPath SourceElement="{Binding ElementName=arc}" Distribution="Even"/>
                </ec:PathListBox.LayoutPaths>
                <TextBlock TextWrapping="Wrap" Text="1"/>
                <TextBlock TextWrapping="Wrap" Text="2"/>
                <TextBlock TextWrapping="Wrap" Text="3" FontWeight="Bold" FontSize="15"/>
                <TextBlock TextWrapping="Wrap" Text="4"/>
                <TextBlock TextWrapping="Wrap" Text="5"/>
                <TextBlock TextWrapping="Wrap" Text="6" FontWeight="Bold" FontSize="15"/>
